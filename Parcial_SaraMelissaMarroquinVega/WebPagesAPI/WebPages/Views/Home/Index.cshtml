@model Parcial_SaraMelissaMarroquinVega.DAL.Entities.Ticket

@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />


<div class="text-center">
    <h1 class="display-4">Concierto "la Bichota"</h1>
</div>
<h4>Validar boleta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Details" class="btn btn-outline-success">Listar todo</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
